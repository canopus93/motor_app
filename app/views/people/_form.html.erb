<div class="col-sm-12 text-center"><h3>Person Form</h3></div>

<%= form_for @person, html: {class: 'form-horizontal'} do |f| %>
	<% if @person.errors.any? %>
		<div class="col-sm-2"></div>
    <div class="col-sm-8 alert-danger">
      <h2 class="text-center">
        <%= pluralize(@person.errors.count, "error") %> prohibited
        this person from being saved :
      </h2>
      <ul class="col-sm-offset-1">
        <% @person.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
		<div class="col-sm-2"></div>
  <% end %>

	<div class="form-group col-sm-12">
		<div class="col-sm-3"></div>
		<%= f.label :name, class: 'control-label col-sm-2' %>
		<div class="col-sm-4">
    	<%= f.text_field :name, class: 'form-control' %>
    </div>
		<div class="col-sm-3"></div>
	</div>

	<div class="form-group col-sm-12">
		<div class="col-sm-3"></div>
		<%= f.label :money, class: 'control-label col-sm-2' %>
		<div class="col-sm-4">
    	<%= f.text_field :money, class: 'form-control' %>
    </div>
		<div class="col-sm-3"></div>
	</div>

	<div class="col-sm-12">
		<%= f.submit class: 'btn btn-default center-block' %>
	</div>
<% end %>
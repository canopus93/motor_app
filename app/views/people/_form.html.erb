<div class="col-sm-12 text-center"><h3>Person Form</h3></div>

<div class="col-md-6 col-md-offset-3">
	<%= form_for @person, html: {class: 'form-horizontal'} do |f| %>
		<%= render 'layouts/error_message', error_object: @person.errors %>	

		<div class="form-group col-sm-12">
			<%= f.label :name, class: 'control-label col-sm-4' %>
			<div class="col-sm-8">
	    	<%= f.text_field :name, class: 'form-control' %>
	    </div>
		</div>

		<div class="form-group col-sm-12">
			<%= f.label :money, class: 'control-label col-sm-4' %>
			<div class="col-sm-8">
	    	<%= f.text_field :money, class: 'form-control' %>
	    </div>
		</div>

		<div class="col-sm-12">
			<%= f.submit class: 'btn btn-default center-block' %>
		</div>
	<% end %>
</div>
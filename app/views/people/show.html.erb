<div class="col-sm-12 text-center"><h3>Person Details</h3></div>
<div class="text-center">
	<p>
	  <strong>Name :</strong>
	  <%= @decorated_person.name %>
	</p>
	 
	<p>
	  <strong>Money :</strong>
	  <%= @decorated_person.money %>
	</p>
</div>
<div class="col-md-6 col-md-offset-3">
	<p>Garage</p>
	<table class="table">
		<thead>
			<tr>
				<th>Motor Name</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			<% @decorated_person.garages.each do |decorated_garage| %>
				<tr>
					<td><%= decorated_garage.link_to_show %></td>
					<td><%= decorated_garage.link_to_edit %> <%= decorated_garage.link_to_delete %></td>
				</tr>
			<% end %>
		</tbody>
			<tfoot>
				<tr>
					<td></td>
					<td><ul class="pull-right"><%= link_to 'Add', new_person_garage_path(@decorated_person.id), class: 'btn btn-primary btn-xs' %></ul></td>
				</tr>
			</tfoot>
	</table>
</div>